<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        style="@style/GenericProgressBackground" >

        <ProgressBar style="@style/GenericProgressIndicator" android:id="@+id/bar" />
        
    </RelativeLayout>
    <ExpandableListView
        android:id="@+id/lvExp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    
    <!-- Footer -->    
     <RelativeLayout
        android:id="@+id/footerPanel"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:background="#60000000"         
         > 
   	<Button
        android:layout_width="match_parent"
         android:id="@+id/buttonFooter"
        android:background="@drawable/red_button"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Locais referentes as colunas"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_action_place"
        android:layout_centerHorizontal="true" 
        style="@style/button_text" />
    <!-- Footer -->
    
	</RelativeLayout>
</RelativeLayout>